{
  "permissions": {
    "allow": [
      "Bash(python:*)",
      "Bash(grep:*)",
      "Bash(pip install:*)",
      "Bash(pip3 install:*)",
      "Bash(apt-get:*)",
      "Bash(apt-get install:*)",
      "Bash(sudo apt-get:*)",
      "Bash(sudo apt-get install:*)",
      "Bash(git push:*)",
      "Bash(git remote set-url:*)",
      "Bash(ls:*)",
      "Bash(rm:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(sqlite3:*)"
    ],
    "deny": []
  },
  "rules": {
    "git_push_policy": "only_on_explicit_user_command",
    "description": "Git push разрешен только по явной команде пользователя. Не делать push автоматически."
  }
}